@model IEnumerable<AsyncInn.Models.HotelRoom>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Styles/Reset.css" rel="stylesheet" />
    <link href="~/Styles/Styling.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script&display=swap" rel="stylesheet">
    <title>Hotel Rooms Home</title>
</head>
<body>
    <header>
        <h2>Async Inn: Hotel Rooms Home</h2>
        <a href="@Url.Action("Index","Hotels")">Manage Hotels</a> | <a href="@Url.Action("Index","Rooms")">Manage Rooms</a> | <a href="@Url.Action("Index","HotelRooms")">Manage Hotel Rooms</a> | <a href="@Url.Action("Index","Amenities")">Manage Amenities</a> | <a href="@Url.Action("Index","RoomAmenities")">Manage Room Amenities</a> | <a href="@Url.Action("Index","Home")">Home Page</a>
    </header>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <div id="tablecontainer">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Rate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PetFriendly)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hotel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Room)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PetFriendly)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hotel.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Room.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { roomID = item.RoomID, hotelID = item.HotelID }) |
                            @Html.ActionLink("Details", "Details", new { roomID = item.RoomID, hotelID = item.HotelID }) |
                            @Html.ActionLink("Delete", "Delete", new { roomID = item.RoomID, hotelID = item.HotelID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
